## Default: rabbitmq
RABBITMQ_CONTAINER_NAME=weathersched-rabbitmq
## Default: 5672
RABBITMQ_MAIN_PORT={{ pyproject_config_celery_broker_port | default(5672) }}
## Default: 15672
RABBITMQ_MANAGEMENT_PORT={{ pyproject_docker_rabbitmq_management_port | default(15672) }}
## Default: rabbitmq
RABBITMQ_USER={{ pyproject_config_celery_broker_user | default('rabbitmq')}}
## Default: rabbitmq
RABBITMQ_PASSWORD={{ pyproject_config_celery_broker_password | default('rabbitmq') }}
## Default: (named volume) rabbitmq_data
RABBITMQ_DATA_DIR={{ pyproject_docker_rabbitmq_data_dir | default('rabbitmq_data') }}

## Default: redis
REDIS_CONTAINER_NAME=weathersched-redis
## Default: 6379
REDIS_PORT={{ pyproject_config_celery_backend_port | default(6379) }}
## Default: (named volume) redis_data
REDIS_DATA_DIR={{ pyproject_docker_redis_data_dir | default('./vols/redis/data') }}

# Default: "bullseye". Tag for docker image (i.e. <image>:<tag>).
#   https://hub.docker.com/_/postgres/?tab=tags
POSTGRES_IMAGE_TAG=
# Default: postgres
POSTGRES_CONTAINER_NAME=weathersched-postgres
# Default: postgres
POSTGRES_USER={{ pyproject_config_db_user | default('postgres') }}
# Default: postgres
POSTGRES_PASSWORD={{ pyproject_config_db_password | default('postgres') }}
# Default: named volume "postgres_data"
POSTGRES_DATA_DIR={{ pyproject_docker_postgres_data_dir | default('./vols/postgres/data') }}
## Default: ./pgsql_scripts
POSTGRES_SCRIPTS_DIR={{ pyproject_docker_postgres_scripts_dir | default('./vols/postgres/pgsql_scripts') }}
## Default: ./pg_entrypoint
POSTGRES_ENTRYPOINT_DIR={{ pyproject_docker_postgres_entrypoint_dir | default('./vols/postgres/pg_entrypoint') }}
## Default: postgres
POSTGRES_DATABASE={{ pyproject_docker_postgres_database | default('weather') }}
# Default: 5432
POSTGRES_PORT={{ pyproject_config_db_port | default(5432) }}
# Default: unset
# Read section on this variable in docker docs before setting:
#   https://hub.docker.com/_/postgres/
POSTGRES_HOST_AUTH_METHOD=

# Default: latest
#   https://hub.docker.com/r/dpage/pgadmin4/tags
PGADMIN_IMAGE_TAG=
# Default: pgadmin
PGADMIN_CONTAINER_NAME=weathersched-pgadmin
# Default: admin@example.com
PGADMIN_DEFAULT_EMAIL={{ pyproject_docker_pgadmin_email | default('admin@example.com') }}
# Default: pgadmin
PGADMIN_DEFAULT_PASSWORD={{ pyproject_docker_pgadmin_password | default('pgAdmin!') }}
# Default: 80
PGADMIN_LISTEN_PORT=
# Default: 15432
PGADMIN_PORT={{ pyproject_docker_pgadmin_webui_port | default(15432) }}
# Default: ./vols/pgadmin/data
PGADMIN_DATA_DIR={{ pyproject_docker_pgadmin_data_dir | default('./vols/pgadmin/data') }}
