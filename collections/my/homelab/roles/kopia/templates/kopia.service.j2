[Unit]
Description=Kopia repository server
After=network.target

[Service]
ExecStart=/usr/bin/kopia server start --address {{ kopia_webui_address }}:{{ kopia_webui_port }} --server-username={{ kopia_webui_username }} --server-password {{ kopia_webui_password }} --ui{% if kopia_webui_insecure %} --insecure{% endif %}

Restart=always
User=root
EnvironmentFile=/etc/environment

[Install]
WantedBy=multi-user.target
