## Apply settings to all hosts
Host *
  ## Disable host key checking (first connection message)
  StrictHostKeyChecking no
  ## Prevent connections from writing to ~/.ssh/known_hosts
  UserKnownHostsFile /dev/null

Host some-hostname 10.0.0.1
  User sshUser
  Port 222
  IdentityFile /absolute/path/to/ansible/repo/.ssh/ansible_id_rsa
  IdentitiesOnly true
